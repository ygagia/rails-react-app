<h2>Cars</h2>

<table>
  <thead>
      <tr>
        <th>Model</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @cars.each do |car| %>
        <tr>
          <td><%= car.model %></td>
          <td><%= link_to 'Show', admin_car_path(car) %></td>
          <td><%= link_to 'Edit', edit_admin_car_path(car) %></td>
          <td><%= link_to 'Delete', admin_car_path(car),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Car', new_admin_car_path %>