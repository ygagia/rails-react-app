<%= form_for [:admin, booking], local: true do |form| %>
  <% if booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% booking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time, { start_day: Date.today, start_year: Date.today.year, minute_step: 15 } %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time, { start_day: Date.today, start_year: Date.today.year, minute_step: 15 } %>
  </div>

  <div class="field">
    <%= form.label :pickup_location %>
    <%= form.select :pickup_location, options_for_select([ "Office", "Port", "Airport"], selected: booking.pickup_location) %>
  </div>

  <div class="field">
    <%= form.label :dropoff_location %>
    <%= form.select :dropoff_location, options_for_select([ "Office", "Port", "Airport"], selected: booking.dropoff_location) %>
  </div>

  <div class="field">
    <%= form.label :car_id -%>
    <%= collection_select(:booking, :car_id, Car.all, :id, :model, prompt: 'Please select a car') -%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
