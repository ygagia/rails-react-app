<h2>Car Groups</h2>

<table>
  <thead>
      <tr>
        <th>Name</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @car_groups.each do |car_group| %>
        <tr>
          <td><%= car_group.name %></td>
          <td><%= link_to 'Show', admin_car_group_path(car_group) %></td>
          <td><%= link_to 'Edit', edit_admin_car_group_path(car_group) %></td>
          <td><%= link_to 'Delete', admin_car_group_path(car_group),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Car Group', new_admin_car_group_path %>